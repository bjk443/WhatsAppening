<div class="container mt-5">
  <%= simple_form_for :search, method: "GET" do |f| %>
    <%= f.input :address, as: :string, type: :text, :placeholder => "Type here", :label => false %>
  <% end %>
</div>


<!-- container for orange background -->

<div header-container>
<!-- navigation bar -->

<!-- avatar -->
<img class="avatar" alt="avatar" src="https://kitt.lewagon.com/placeholder/users/cveneziani" />


<!-- title -->

<h1>Hello, John !<h1>
<h2>Where would you like to go</h2>

<!-- filtering and searchbox -->

  <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Dropdown button
  </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Near-by</a>
      <a class="dropdown-item" href="#">Another </a>
    </div>
  </div>

<!-- container end, apply border-radius to bottom onl -->
</div>

<!-- cards -->
  <!-- iterate through venue cards with events -->
    <div class="container mt-3 venue-section">
        <div class="row">
          <% @venues.each do |venue|%>
            <div class="event-card">
                <%= cl_image_tag venue.photos[0].key, height:220, crop: :fill, class: "w-100" %>
                <div class="card-trip-infos">
                <h2><%= venue.events.first.name %></h2>
                <h3><%= venue.name %></h3>
                <!--star ratings -->
                <% full_stars = venue.events.first.total_rating.round %>
                <% empty_stars = 5 - full_stars %>
                <% full_stars.times do %>
                <span class="fa fa-star checked"></span>
                <% end %>
                <% empty_stars.times do %>
                <span class="fa fa-star"></span>
                <% end %>
               
                <!-- iterate through users who are logged in -->
                <div class="users-online">
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
                </div>
            </div>
          <% end %>
        </div>
    </div>
</div>
